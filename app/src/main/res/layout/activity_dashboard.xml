<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20dp"
        android:weightSum="2">


        <TextView
            android:id="@+id/btn_inventory"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_silver_bg"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableTop="@drawable/ic_inventory"
            android:elevation="4dp"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/ic_inventory"
            android:text="Inventory"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:cornerRadius="16dp" />


        <TextView
            android:id="@+id/btn_credit"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/btn_inventory"
            android:layout_weight="1"
            android:background="@drawable/button_silver_bg"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:drawableTop="@drawable/ic_credit"
            android:elevation="4dp"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:padding="20dp"
            android:src="@drawable/ic_inventory"
            android:text="Credit"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:cornerRadius="16dp" />


    </LinearLayout>


</RelativeLayout>