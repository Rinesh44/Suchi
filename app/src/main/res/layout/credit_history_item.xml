<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:weightSum="10">

    <TableRow>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="4"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_creditor"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user_proto" />

            <TextView
                android:id="@+id/tv_creditor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_regular"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_creditor_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_regular"
                android:singleLine="true"
                android:text="address"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_creditor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_regular"
                android:singleLine="true"
                android:text="phone"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_creditor_joined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/proxima_regular"
                android:singleLine="true"
                android:text="21st aug"
                android:textSize="12sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_paid_amount"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:ellipsize="end"
            android:fontFamily="@font/proxima_regular"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/paid_amount"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_due_amount"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="3"
            android:background="@color/white"
            android:ellipsize="end"
            android:fontFamily="@font/proxima_regular"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/due_amount"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


    </TableRow>


</TableLayout>
