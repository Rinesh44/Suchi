<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.treeleaf.suchi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".SuchiApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.credit.CreditHistory"></activity>
        <activity android:name=".activities.credit.CreditEntry" />
        <activity android:name=".activities.credit.AddCreditor" />
        <activity android:name=".activities.report.ReportActivity" />
        <activity android:name=".activities.sales.SalesBill" />
        <activity android:name=".activities.sales.SalesDetailsActivity" />
        <activity
            android:name=".activities.sales.AddSalesActivity"
            android:parentActivityName=".activities.sales.SalesActivity" />
        <activity
            android:name=".activities.sales.SalesActivity"
            android:launchMode="singleTop" />
        <activity android:name=".activities.inventory.stock.StockDetails" />
        <activity android:name=".activities.inventory.stock.StockEntryActivity" />
        <activity android:name=".activities.inventory.stock.SearchStock" />
        <activity android:name=".activities.inventory.stock.StockActivity" />
        <activity android:name=".activities.credit.CreditActivity" />
        <activity android:name=".activities.inventory.InventoryActivity" />
        <activity android:name=".activities.dashboard.DashboardActivity" />
        <activity android:name=".activities.enterkey.EnterKeyActivity" />
        <activity android:name=".activities.register.RegisterActivity" />
        <activity android:name=".activities.login.LoginActivity" />
        <activity android:name=".activities.profile.ProfileActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>